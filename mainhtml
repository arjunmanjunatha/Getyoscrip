<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>GET YOUR SCRIPT</title>
</head>
<body>
  <form>
    <label for="aid-input">AID:</label>
    <input type="text" id="aid-input" name="aid-input"><br><br>
  
    <button type="submit">Submit</button>
  </form>

  <p id="output-script"></p>

  <script>
    document.querySelector('form').addEventListener('submit', function(event) {
      event.preventDefault();

      const aidInputValue = document.querySelector('#aid-input').value;

      // Validate the user input to ensure it contains only lowercase letters and spaces
      const regex = /^[a-z ]+$/;
      if (!regex.test(aidInputValue)) {
        alert('The AID must contain only lowercase letters and spaces.');
        return;
      }

      (function (s, t, a, y, twenty, two) {
        s.Stay22 = s.Stay22 || {};

        // Set the AID parameter to the user input value
        s.Stay22.params = {
          aid: aidInputValue,
        };

        twenty = t.createElement(a);
        two = t.getElementsByTagName(a)[0];
        twenty.async = 1;
        twenty.src = y;
        two.parentNode.insertBefore(twenty, two);

        // Update the output script with the user input value
        document.querySelector('#output-script').textContent = `(function (s, t, a, y, twenty, two) {
  s.Stay22 = s.Stay22 || {};

  // Just fill out your configs here
  s.Stay22.params = {
    aid: "${aidInputValue}", // your partner ID for tracking, keep quotes
  };

  // Leave this part as-is;
  twenty = t.createElement(a);
  two = t.getElementsByTagName(a)[0];
  twenty.async = 1;
  twenty.src = y;
  two.parentNode.insertBefore(twenty, two);
})(window, document, "script", "https://scripts.stay22.com/letmeallez.js");`;

      })();
    });
  </script>
</body>
</html>
